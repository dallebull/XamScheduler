<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FriskaClient"
             x:Class="FriskaClient.MainPage"
             x:Key="FriskaClient.MsgToImagePathConverter" BackgroundColor="#ED1C24">

    <ContentPage.Resources>
        <ResourceDictionary>
            <local:MsgToImagePathConverter x:Key="MsgToImagePathConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    
    <ContentPage.ToolbarItems/>

    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="90%" />
                <RowDefinition Height="10%" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25%" />
                <ColumnDefinition Width="25%" /> 
                <ColumnDefinition Width="25%" />
                <ColumnDefinition Width="25%" />
            </Grid.ColumnDefinitions>

            <ListView x:Name="ansList" ItemsSource="{Binding MyAnswers}" Grid.ColumnSpan="4" HasUnevenRows="True" IsPullToRefreshEnabled="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout BackgroundColor="#FFFFFF" Orientation="Vertical">
                                <StackLayout Orientation="Horizontal">
                                    

                                    <Label Text="{Binding Kontroll}"
                                           VerticalOptions="Center"
                                             HorizontalOptions="CenterAndExpand"
                                     FontAttributes="Bold"
                                TextColor="Black"
                                            Grid.Row="0" Grid.Column="0"/>
                                    
                                    <Label Text="{Binding KontrollTag}"
                                           VerticalOptions="Center"
                                HorizontalOptions="CenterAndExpand"
                                           FontAttributes="Bold"                                           
                                TextColor="Black" 
                                            Grid.Row="0" Grid.Column="1"/>

                                    <Image Source="{Binding Rattsvar, Converter={StaticResource MsgToImagePathConverter}}"
                                       VerticalOptions="Center"
                                HorizontalOptions="CenterAndExpand"
                                       Grid.Row="0" Grid.Column="2" />
                                    
                                        <!--<Label Text="{Binding Rattsvar}"
                                           VerticalOptions="Center"
                                HorizontalOptions="CenterAndExpand"
                                           FontAttributes="Bold"                                           
                                TextColor="Black" Grid.Row="0" Grid.Column="2" />-->


                                    <ImageButton Source="ms-appx:///Assets/delete.png"  CommandParameter="{Binding ID}" Clicked="OnDelButtonClicked" Grid.Row="0" Grid.Column="3"/>

                                </StackLayout>
                            </StackLayout>
                        </ViewCell>

                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Button Text="LÃ¤gg Till Kontroll" VerticalOptions="End" HorizontalOptions="Center" Clicked="OnAddButtonClicked" Grid.Row="1" Grid.Column="0"  Grid.ColumnSpan="2" />
            <Button Text="Scanna Kontroll" VerticalOptions="End" HorizontalOptions="Center" Clicked="OnScanButtonClicked" Grid.Row="1" Grid.Column="2"  Grid.ColumnSpan="2" />
            
        </Grid>
    </ContentPage.Content>
</ContentPage>

